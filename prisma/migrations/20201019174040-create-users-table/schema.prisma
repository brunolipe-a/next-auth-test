generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  id            String    @default(uuid()) @id
  name          String
  email         String    @unique  
  password      String 
  emailVerified DateTime? @map(name: "email_verified")
  avatar        String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "users")
}
